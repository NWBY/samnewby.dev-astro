---
import Base from "@/layouts/Base";

const allPosts = await Astro.glob("../posts/*.mdx");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

const title = "All Tags";
---

<Base title={title}>
  <div>
    {
      tags.map((tag) => (
        <p>
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</Base>
